    <div class="main-info">
        <div class="btn-line" {{action 'slide' controller view.id target='view.parentView'}}>
            <span class="snf-font if-group group-icon"></span>
            <strong class="group-name u-wrap">{{controller.model.name}}</strong>
            <span>({{pluralize controller.model.users.length 'member'}})</span>
            <span class="arrow-up fa fa-angle-up"></span>
            <span class="arrow-down fa fa-angle-down"></span>
        </div>
        <button class="margin-zero right button alert tiny" {{bind-attr data-popover-trigger='view.id'}}>{{t 'button.delete'}}</button>
        {{view 'popover' innerTemplate='overlays/confirm-simple' actionToPerform='deleteGroup' position='pos-bottom' triggerBy=view.id cls='warning'}}
    </div>
    <div class="js-slide-me slide-me more-info">
    <table>
        <tbody>
        {{#each u in controller.model.users}}
            <tr>
                <td>{{u.email}}</td>
                <td class="text-right"><a data-tooltip {{action "removeUserFromGroup" u}} class="has-tip" title="Remove user from group">{{t 'button.remove_user_from_group'}}</a></td>
                </tr>
        {{/each}}
        </tbody>
    </table>
        {{view 'input-emails' placeholder="user1@example.com user2@example.com..." label="Add more users"}}
        <div class="buttons">
            <button class="tiny right" {{action "addUsersToGroup"}} disabled={{controller.freezeCreation}}>{{fa-icon "fa-users"}} {{t 'button.add_users_to_group'}}</button>
        </div>
    <hr>
    </div>
