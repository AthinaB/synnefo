<td {{bind-attr class="new updated loading"}}>
    {{#if new}}<span class="label alert">new</span>{{/if}}
        {{#link-to 'container' name}}
        {{#if isTrash}}{{fa-icon "fa-trash"}} {{/if}}
            {{name}}
        {{/link-to}}
</td>
<td>
       {{view "select" content=availableProjects
                        optionLabelPath="content.select_label"
                        optionValuePath="content.id"
                        prompt="Reassign project:"
                        selection=selectedProject}}
 
</td>
<td>
    {{#tooltip-hint title=last_modified_human}}
        {{time-from-now last_modified }}
    {{/tooltip-hint}}
</td>
<td>
    {{convert-bytes bytes}} ({{count}} Items)
</td>
<td>
       {{#if isTrash}}
            <a class="icon-a" title="Cannot delete trash container" disabled>{{fa-icon "fa-remove fa-fw"}}</a>
        {{else}}
            {{#if isEmpty}}
                <a class="icon-a" title="Delete container" {{action 'emptyAndDelete'}}>{{fa-icon "fa-remove fa-fw"}}</a>
            {{else}}
                <a class="icon-a" title="Delete container" {{action 'showDialog' 'confirm-simple' this.controller this 'emptyAndDelete'}}>{{fa-icon "fa-remove fa-fw"}}</a>
            {{/if}}
        {{/if}}
        <a class="icon-a" title="Empty container" {{bind-attr disabled=isEmpty}} {{action 'showDialog' 'confirm-simple' this.controller this 'emptyContainer'}}>{{fa-icon "fa-trash-o fa-fw"}}</a>
</td>
