<div class="wrap clearfix">

    <div class="loader">{{fa-icon "fa-refresh fa-pulse"}}</div>

    <div class="col name-col">
        {{#if container.model.new}}<span class="label alert">new</span>{{/if}}
        {{#if listView}}
        <h4 data-tooltip class="ellipsis has-tip" title={{container.model.name}}>
            {{#link-to 'container' container.model.name}}
                {{fa-icon "fa-trash trash-icon"}}
                <span>{{container.model.name}}</span>
                {{fa-icon "fa-external-link"}}
            {{/link-to}}
        </h4>
        {{else}}
        <h4>
            {{#link-to 'container' container.model.name}}
                {{fa-icon "fa-trash trash-icon"}}
                <span>{{container.model.name}}</span>
                {{fa-icon "fa-external-link"}}
            {{/link-to}}
        </h4>

        {{/if}}
    </div>
    {{#if gridView}}
        <dl>
            <dt>Items</dt>
            <dd>{{container.model.count}}</dd>
            <dt>Size</dt>
            <dd>{{convert-bytes container.model.bytes}}</dd>
            <dt>Modified</dt>
            <dd data-tooltip calss="has-tip" title={{container.model.last_modified_human}}>
                    {{time-from-now container.model.last_modified }}
            </dd>
        </dl>
    {{/if}}
    <div class="col select-col">
        {{view "select" content=container.availableProjects
                        optionLabelPath="content.select_label"
                        optionValuePath="content.id"
                        prompt="Reassign project:"
                        selection=container.selectedProject}}
    </div>

    {{#if listView}}
       <div class="col data-col">
            {{convert-bytes container.model.bytes}}
        </div>
        <div data-tooltip class="col date-col has-tip" title={{container.model.last_modified_human}}>
                {{time-from-now container.model.last_modified }}
        </div>

    {{/if}}
   {{#if listView}}
        <div class="col data-col">
            {{container.model.count}}
        </div>
    {{/if}}
    <div class="col actions-col">
        {{#if container.canDelete}}
            <a data-tooltip class="icon-a has-tip" title="Delete container" {{action 'showDialog' 'confirm-simple' controller container.model 'emptyAndDelete'}}>{{fa-icon "fa-remove fa-fw"}}</a>
        {{else}}
            <a data-tooltip class="icon-a has-tip" title="Cannot delete this container" disabled>{{fa-icon "fa-remove fa-fw"}}</a>
        {{/if}}

        {{#if container.canEmpty}}
            <a data-tooltip class="icon-a has-tip" title="Empty container" {{action 'showDialog' 'confirm-simple' controller container.model 'emptyContainer'}}>
                <i class="fa-fw fa">&empty;</i>
            </a>
        {{else}}
            <a data-tooltip class="icon-a has-tip" title="Empty container" disabled>
                <i class="fa-fw fa">&empty;</i>
            </a>
        {{/if}}
    </div>

</div>
