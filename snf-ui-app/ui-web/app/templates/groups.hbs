<h3>Groups</h3>
{{#each}}
    Group: <strong>{{name}}</strong><br>
    Members: 
    <ul>
    {{#each m in members}}
        <li>
            {{m.email}} 
            <a {{action "removeUserFromGroup" m.uuid}} title="Remove user from group">{{fa-icon "fa-remove"}}</a>
        </li>
    {{/each}} 
    </ul>
    <a {{action "deleteGroup"}}>Delete group {{fa-icon "fa-remove"}}</a>
    
    
    <hr>
{{/each}}

{{input type="text" placeholder="Group Name" value=newGroup}}
{{input type="text" placeholder="Comma separeted emails" value=emails}}

<button {{action 'createGroup' }}>Create group</button>


{{outlet}}
