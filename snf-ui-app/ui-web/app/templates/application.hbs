{{partial "header"}}
{{partial "top-bar"}}

<div class="main clearfix">
    <div class="columns small-2 sidebar">
            <h4>{{#link-to 'containers'}}Containers{{/link-to}}</h4>
            <ul class="dir-tree">
                {{#each container in sortedContainers}}
                    {{dir-tree root=container.name resolver=resolveSubDirs role="nav" click='handleDirClick'}}
                {{/each}}
            </ul>
    </div>

    <div class="columns small-10">
        {{outlet}}
    </div>
</div>

{{ snf-dropfile files=dropFiles 
                uploader=dropFileUploader 
                uploadLocation=uploadLocation
                classNames="small-12" }} 
{{!-- dialogs at first is completely empty --}}
{{!-- when a dialog appears, it renders in the dialogs outlet --}}

{{!-- The names of the outlets are used and in the file routes/application.js, too --}}
{{outlet "dialogs"}}
{{outlet "errorDialogs"}}
{{outlet "feedback"}}

<div class="bottom">
	{{outlet "total-quotas"}}
    <a class="fl-right" {{action 'showDialog' 'feedback' 'feedback'}}>Send us Feedback</a>
</div>

