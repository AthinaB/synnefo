{{#if listView}}
    <li>
        <div class="wrap clearfix">
            <div class="col name-col">Name</div>
            <div class="col select-col">Project</div>
            <div class="col data-col">Size</div>
            <div class="col date-col">Modified</div>
            <div class="col data-col">Items</div>
            <div class="col actions-col"></div>
        </div>
    </li>
{{/if}}
{{#each container in sortedModel itemController="container"}}
    <li class="{{container.isNew}} {{container.isLoading}} {{container.isTrash}}">
        <div class="wrap clearfix">

            <div class="loader">{{fa-icon "fa-refresh fa-pulse"}}</div>

            <div class="col name-col">
                {{#if container.model.new}}<span class="label alert">new</span>{{/if}}
                {{#if listView}}
                <h4 class="ellipsis hint--bottom" data-hint={{container.model.name}}>
                    {{#link-to 'container' container.model.name}}
                        {{fa-icon "fa-trash trash-icon"}}
                        <span>{{container.model.name}}</span>
                        {{fa-icon "fa-external-link"}}
                    {{/link-to}}
                </h4>
                {{else}}
                <h4>
                    {{#link-to 'container' container.model.name}}
                        {{fa-icon "fa-trash trash-icon"}}
                        <span>{{container.model.name}}</span>
                        {{fa-icon "fa-external-link"}}
                    {{/link-to}}
                </h4>

                {{/if}}
            </div>
            {{#if gridView}}
                <dl>    
                    <dt>Items</dt>
                    <dd>{{container.model.count}}</dd>
                    <dt>Size</dt>
                    <dd>{{convert-bytes container.model.bytes}}</dd>
                    <dt>Modified</dt>
                    <dd>
                        {{#tooltip-hint title=container.model.last_modified_human}}
                            {{time-from-now container.model.last_modified }}
                        {{/tooltip-hint}}
                    </dd>
                </dl>
            {{/if}}
            <div class="col select-col">
                {{view "select" content=container.availableProjects
                                optionLabelPath="content.select_label"
                                optionValuePath="content.id"
                                prompt="Reassign project:"
                                selection=container.selectedProject}}
            </div>
 
            {{#if listView}}
               <div class="col data-col">
                    {{convert-bytes container.model.bytes}}
                </div>
                <div class="col date-col">
                        {{#tooltip-hint title=container.model.last_modified_human}}
                            {{time-from-now container.model.last_modified }}
                        {{/tooltip-hint}}
                </div>

            {{/if}}
           {{#if listView}}
                <div class="col data-col">
                    {{container.model.count}}
                </div>
            {{/if}}
            <div class="col actions-col">
                {{#if container.canDelete}}
                    <a class="icon-a" title="Delete container" {{action 'showDialog' 'confirm-simple' controller container.model 'emptyAndDelete'}}>{{fa-icon "fa-remove fa-fw"}}</a>
                {{else}}
                    <a class="icon-a" title="Cannot delete this container" disabled>{{fa-icon "fa-remove fa-fw"}}</a>
                {{/if}}

                {{#if container.canEmpty}}
                    <a class="icon-a" title="Empty container" {{action 'showDialog' 'confirm-simple' controller container.model 'emptyContainer'}}>
                        <i class="bold fa-fw fa">&empty;</i>
                    </a>
                {{else}}
                    <a class="icon-a" title="Empty container" disabled>
                        <i class="bold fa-fw fa">&empty;</i>
                    </a>
                {{/if}}
            </div>

        </div>
    </li>
{{/each}}
