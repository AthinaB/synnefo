<div class="row">
	<div class="img-col"><img src="" alt="image"></div>
	<a href="" class="name-col">{{name}}</a>
	<div class="size-col">{{bytes-to-human size}}</div>
	<div class="btn-col">{{btn-span class="wrap-a" content="details"}}</div>

</div>
<div class="details">
	<div class="row">
		<h3>Image metadata</h3>
		<dl>
			<dt>Description [here?]</dt><dd>{{properties.description}}</dd>
			<dt>Owner</dt><dd>{{view.ownerEmail}}</dd>
			<dt>OS</dt><dd>{{properties.os}}</dd>
			<dt>OS Family</dt><dd>{{properties.osfamily}}</dd>
			{{#if kernel}}
				<dt>Kernel</dt><dd>{{kernel}}</dd>
			{{/if}}
			<dt>GUI</dt><dd>{{properties.gui}}</dd>
			<dt>Users</dt><dd>{{properties.users}}</dd>
			<dt>Size</dt><dd>{{bytes-to-human size}}</dd>
			<dt>Status</dt><dd>{{status}}</dd>
			<dt>Created at</dt><dd>{{created_at}}</dd>
			<dt>Updated at</dt><dd>{{updated_at}}</dd>
			<dt>Root partition</dt><dd>{{properties.root_partition}}</dd>
			<dt>Partition table</dt><dd>{{properties.partition_table}}</dd>
		</dl>
	</div>
</div>